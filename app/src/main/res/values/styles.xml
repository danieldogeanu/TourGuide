<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/Yellow</item>
    </style>

    <style name="RootCategory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/DarkGray</item>
    </style>

    <style name="MainActicityBackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MainScreenContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/gradient_bg</item>
    </style>

    <style name="MainTitle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">140dp</item>
    </style>

    <style name="MainTitleCityName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_extrabold</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainTitleSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/TransparentWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FancyButtonsContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="FancyButton">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="FancyButtonImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="FancyButtonText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/TransparentWhite</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@color/TransparentWhite</item>
    </style>

    <style name="CategoryActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">115dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:background">@color/Yellow</item>
    </style>

    <style name="CategoryActionBarBackButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:src">@drawable/ic_chevron_left</item>
        <item name="android:tint">@color/White</item>
    </style>

    <style name="CategoryActionBarSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_toRightOf">@id/category_back_btn</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/TransparentWhite</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CategoryActionBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/category_subtitle</item>
        <item name="android:layout_toRightOf">@id/category_back_btn</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:fontFamily">@font/open_sans_extrabold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CategoryItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="CategoryItemBackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CategoryItemAddress">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@id/cat_item_title</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">48dp</item>
        <item name="android:drawableLeft">@drawable/ic_location_pin</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/LessTransparentWhite</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CategoryItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">48dp</item>
        <item name="android:fontFamily">@font/open_sans_extrabold</item>
        <item name="android:lineSpacingExtra">-2dp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CategoryItemArrow">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_chevron_right_high</item>
    </style>

    <style name="CategoryItemsList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

</resources>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
    </style>

    <style name="Root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RootYellow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/Yellow</item>
    </style>

    <style name="RootCategory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/DarkGray</item>
    </style>

    <style name="MainActicityBackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">336dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MainScreenContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/gradient_bg</item>
    </style>

    <style name="MainTitle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">140dp</item>
    </style>

    <style name="MainTitleLandscape">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">48dp</item>
    </style>

    <style name="MainTitleCityName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_extrabold</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainTitleSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/TransparentWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FancyButtonsContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="FancyButtonsContainerLandscape">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="FancyButton">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="FancyButtonImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="FancyButtonText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/TransparentWhite</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@color/TransparentWhite</item>
    </style>

    <style name="CategoryActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:background">@color/Yellow</item>
    </style>

    <style name="CategoryActionBarBackButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:src">@drawable/ic_chevron_left</item>
        <item name="android:tint">@color/White</item>
    </style>

    <style name="CategoryActionBarTitleContainer">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_toRightOf">@id/category_back_btn</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CategoryActionBarTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/open_sans_extrabold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CategoryActionBarTabText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CategoryActionBarTabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_toRightOf">@id/category_back_btn</item>
        <item name="tabTextColor">@color/TransparentWhite</item>
        <item name="tabSelectedTextColor">@color/White</item>
        <item name="tabTextAppearance">@style/CategoryActionBarTabText</item>
        <item name="tabIndicatorColor">@color/White</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="CategoryItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="CategoryItemBackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CategoryItemAddress">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@id/cat_item_title</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">48dp</item>
        <item name="android:drawableLeft">@drawable/ic_location_pin</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/LessTransparentWhite</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CategoryItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">48dp</item>
        <item name="android:fontFamily">@font/open_sans_extrabold</item>
        <item name="android:lineSpacingExtra">-2dp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CategoryItemArrow">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_chevron_right_high</item>
    </style>

    <style name="CategoryItemsList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="DetailContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DetailHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="DetailHeaderImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="DetailHeaderOverlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:src">@drawable/detail_header_bg</item>
    </style>

    <style name="DetailBackButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:src">@drawable/ic_chevron_left</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:tint">@color/White</item>
    </style>

    <style name="DetailCityName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_above">@id/detail_title</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/LessTransparentWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DetailTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:fontFamily">@font/open_sans_extrabold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:lineSpacingExtra">-4dp</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="DetailContentBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_below">@id/detail_header</item>
        <item name="android:src">@drawable/detail_content_bg</item>
    </style>

    <style name="DetailContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/detail_header</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="DetailContentSectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DetailContentDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:background">@color/DirtyWhite</item>
    </style>

    <style name="DetailContentText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/LightGray</item>
    </style>

    <style name="DetailsInfoContainer">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="DetailsInfoLineHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textColor">@color/DarkGray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DetailsInfoLineContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@color/LightGray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="DetailCtaContainer">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="DetailCtaButtonFrame">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DetailCtaButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>

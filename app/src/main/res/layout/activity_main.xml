<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootYellow"
    tools:context="com.danieldogeanu.android.tourguide.MainActivity">

    <ImageView
        android:id="@+id/main_bg_image"
        android:src="@drawable/main_activity_bg"
        android:contentDescription="@string/cd_main_bg_img"
        style="@style/MainActivityBackgroundImage" />

    <RelativeLayout
        android:id="@+id/screen_container"
        style="@style/MainScreenContainer">

        <LinearLayout
            android:id="@+id/city_title"
            style="@style/MainTitle">

            <TextView
                android:text="@string/city_name"
                style="@style/MainTitleCityName" />

            <TextView
                android:text="@string/app_name"
                style="@style/MainTitleSubtitle" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btns_container"
            style="@style/FancyButtonsContainer">

            <LinearLayout
                android:id="@+id/museums_btn"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                style="@style/FancyButton">

                <ImageView
                    android:src="@drawable/ic_museums"
                    android:contentDescription="@string/cd_fancy_btn"
                    style="@style/FancyButtonImage" />

                <TextView
                    android:text="@string/cat_museums"
                    style="@style/FancyButtonText" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/parks_btn"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/museums_btn"
                style="@style/FancyButton">

                <ImageView
                    android:src="@drawable/ic_parks"
                    android:contentDescription="@string/cd_fancy_btn"
                    style="@style/FancyButtonImage" />

                <TextView
                    android:text="@string/cat_parks"
                    style="@style/FancyButtonText" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/palaces_btn"
                android:layout_below="@id/museums_btn"
                style="@style/FancyButton">

                <ImageView
                    android:src="@drawable/ic_palaces"
                    android:contentDescription="@string/cd_fancy_btn"
                    style="@style/FancyButtonImage" />

                <TextView
                    android:text="@string/cat_palaces"
                    style="@style/FancyButtonText" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/monuments_btn"
                android:layout_below="@id/parks_btn"
                android:layout_toRightOf="@id/palaces_btn"
                style="@style/FancyButton">

                <ImageView
                    android:src="@drawable/ic_monuments"
                    android:contentDescription="@string/cd_fancy_btn"
                    style="@style/FancyButtonImage" />

                <TextView
                    android:text="@string/cat_monuments"
                    style="@style/FancyButtonText" />

            </LinearLayout>

            <View
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/museums_btn"
                style="@style/VerticalDivider" />

            <View
                android:layout_alignParentLeft="true"
                android:layout_below="@id/museums_btn"
                style="@style/HorizontalDivider" />

            <View
                android:layout_toRightOf="@id/palaces_btn"
                android:layout_below="@id/museums_btn"
                style="@style/VerticalDivider" />

            <View
                android:layout_toRightOf="@id/museums_btn"
                android:layout_below="@id/parks_btn"
                style="@style/HorizontalDivider" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
